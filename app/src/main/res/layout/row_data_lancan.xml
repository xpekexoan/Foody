<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="0dp">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/img_item_lancan"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:adjustViewBounds="true"
        android:src="@drawable/comvanphong"
        app:riv_corner_radius="4dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_item_lancan"
        android:text="Cơm văn phòng"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginTop="-2dp"
        android:textSize="13dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_item_lancan_detail"
        android:text="Quán bán online thôi, phần cơm 30k khá là đầy đặn luôn"
        android:lines="2"
        android:textColor="#000"
        android:textSize="10dp"/>

</LinearLayout>